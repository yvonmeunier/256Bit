extends layout
block content
    main.d-flex.flex-row.mh-100
        +navbar()
        .flex-column.min-vh-100.w-100
            nav.navbar.b-dark.flex-row
                span.navbar-brand.mb-2.mt-2.h1.logo Home
            .d-flex.pt-3.ps-3.mh-100
                .pixel-border-text.flex-column.w-75(style="min-height: 30rem;max-height: 30rem;max-width: 44rem;")
                    canvas(id="graph").h-100
                .flex-column.ps-4.w-25
                    .pixel-border-text.py-3.mb-3(style="max-height: 25rem;") BTC TRANSACTIONS
                        each tx in BTCtxs
                            +btctx(tx)
                    .pixel-border-text.py-3.mb-3(style="max-height: 25rem;") ETH TRANSACTIONS
                        each tx in ETHtxs
                            +ethtx(tx)
    script(src='./js/jquery.min.js')
    script(src='./js/popper.min.js')
    script(src='./js/bootstrap.min.js')
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script(src='javascripts/cryptocharts.js')
